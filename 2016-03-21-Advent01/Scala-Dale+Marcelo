// Recursive Part 1
{
  @tailrec
  def solve(data: List[Char], currentFloor: Int = 0): Int = {

    if (data.isEmpty) {
      currentFloor
    } else {
      val nextFloor = if (data.head == '(') {
        currentFloor + 1
      } else {
        currentFloor - 1
      }
      solve(data.tail, nextFloor)
    }
  }

  solve(input.toCharArray.toList)

}

// Recursive Part 2
{
  @tailrec
  def solve(data: List[Char], currentFloor: Int = 0, offset: Int = 0): Int = {
    val nextOffset = offset + 1
    if (currentFloor == -1) {
      offset
    } else {
      val nextFloor = if (data.head == '(') {
        currentFloor + 1
      } else {
        currentFloor - 1
      }
      solve(data.tail, nextFloor, nextOffset)
    }
  }

  solve(input.toCharArray.toList)
}

// Fold Part 1
{
  val myList = input.toCharArray.toList

  def myFunc(currentFloor: Int, data: Char): Int = {
    if (data == '(') {
      currentFloor + 1
    } else {
      currentFloor - 1
    }
  }

  myList.foldLeft(0)(myFunc)
}

// Map Part 1

def myFunc(x: Char) = {
  if (x == '(') 1 else -1
}

